if(data exist in db) {
    get data from db
    if(last synced data before 30 minutes) {
        saveAPIResponseToDBAndReturnUpdatedData()
    }
} else {
    saveAPIResponseToDBAndReturnUpdatedData()
}

saveAPIResponseToDBAndReturnUpdatedData() : UpdatedData {
     get data from server
     save to db
     get data from db
}